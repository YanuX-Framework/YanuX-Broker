{
  "name": "YanuX-Broker",
  "host": "localhost",
  "port": 3002,
  "public": "../public/",
  "paginate": {
    "default": 10,
    "max": 50
  },
  "mongodb": "mongodb://localhost:27017/yanux-broker",
  "authentication": {
    "secret": null,
    "strategies": [
      "jwt",
      "local",
      "yanux"
    ],
    "path": "/authentication",
    "service": "users",
    "session": true,
    "cookie": {
      "enabled": true,
      "name": "feathers-jwt",
      "httpOnly": false,
      "secure": false
    },
    "jwt": {
      "header": {
        "typ": "access"
      },
      "audience": "https://www.yanux.org",
      "subject": "anonymous",
      "issuer": "feathers",
      "algorithm": "RS256",
      "expiresIn": "1d"
    },
    "local": {
      "entity": "user",
      "usernameField": "email",
      "passwordField": "password"
    },
    "yanux": {
      "url": "http://localhost:3001/api/verify_oauth2"
    }
  },
  "beacons": {
    "maxInactivityTime": 2000
  }
}