{
  "name": "YanuX-Broker",
  "host": "localhost",
  "port": 3002,
  "public": "../public/",
  "paginate": {
    "default": 10,
    "max": 50
  },
  "mongodb": "mongodb://localhost:27017/yanux-broker",
  "authentication": {
    "entity": "user",
    "service": "users",
    "authStrategies": [
      "jwt",
      "local",
      "yanux"
    ],
    "jwtOptions": {
      "header": {
        "typ": "access"
      },
      "audience": "https://www.yanux.org",
      "issuer": "YanuX-Broker",
      "algorithm": "RS256",
      "expiresIn": "1d"
    },
    "local": {
      "usernameField": "email",
      "passwordField": "password"
    },
    "yanux": {
      "url": "http://localhost:3001/api/verify_oauth2"
    }
  },
  "beacons": {
    "maxInactivityTime": 5000,
    "avgRssiThreshold": -65
  }
}