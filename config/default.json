{
  "name": "YanuX-Broker",
  "host": "localhost",
  "port": 3002,
  "zeroconf": false,
  "mongodb": "mongodb://localhost:27017/yanux-broker",
  "keys": {
    "private_key_path": "keys/private_key.pem",
    "public_key_path": "keys/public_key.pem",
    "combined_key_path": "keys/combined_key.pem"
  },
  "authentication": {
    "entity": "user",
    "service": "users",
    "authStrategies": [
      "jwt",
      "local",
      "yanux"
    ],
    "jwtOptions": {
      "header": {
        "typ": "access",
        "jku": "http://192.168.12.1:3002/api/jwks"
      },
      "audience": "https://www.yanux.org",
      "issuer": "YanuX-Broker",
      "algorithm": "RS256",
      "expiresIn": "1d"
    },
    "local": {
      "usernameField": "email",
      "passwordField": "password"
    },
    "yanux": {
      "url": "http://localhost:3001/api/verify_oauth2",
      "usernameField": "email",
      "clientsService": "clients",
      "clientEntity": "client",
      "clientIdField": "id"
    }
  },
  "beacons": {
    "maxInactivityTime": 5000,
    "avgRssiThreshold": -65
  },
  "paginate": {
    "default": 10,
    "max": 50
  },
  "public": "../public/"
}